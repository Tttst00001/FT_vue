Page {
  background-color: #ffbf1b;
  height: 100%;
}

.body {
  height: 100%;
  background-color: #efefef;
}

.container {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding: 10px 0 0 10px;
}

.container .item {
  width: 22%;
  height: auto;
  line-height: 148rpx;
  margin-right: 10px;
  background-color: #fff;
  text-align: center;
  margin-bottom: 10px;
  border-radius: 10px;
  position: relative;
}

.index {
  position: absolute;
  top: 5px;
  right: 5px;
  width: 16px;
  height: 16px;
  font-size: 12px;
  line-height: 16px;
  border-radius: 100%;
  background-color: red;
  color: #fff;
  font-weight: bold;
}

.icon {
  position: absolute;
  bottom: -20px;
  right: 5px;
}

.icon image {
  width: 16px;
  height: 16px;
}

.txt {
  font-size: 28rpx;
}

.bottomBtn {
  width: 100%;
  line-height: 80px;
  text-align: center;
  color: #fff;
  font-weight: bold;
  font-size: 20px;
  background-color: #ffbf1b;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-radius: 40px 40px 0 0;
}

.topText {
  font-weight: bold;
  color: #fff;
  font-size: 40rpx;
  text-align: center;
  padding: 30rpx 0 20rpx;
}

.back {
  position: fixed !important;
  top: 56px;
  left: 10px;
  z-index: 2;
}